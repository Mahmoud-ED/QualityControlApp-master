@model IEnumerable<QualityControlApp.Models.Entities.AirPortRequest>

@{
    ViewData["Title"] = "قائمة الطلبات";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<!-- فلترة -->
    <!-- زر إظهار/إخفاء -->
    <div class="text-end mb-3">
        <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#searchFormCollapse">
            🔍 عرض / إخفاء خيارات البحث
        </button>
    </div>

    <!-- فورم البحث داخل collapse -->
    <div class="collapse " id="searchFormCollapse">
        <form method="get" asp-action="Index" class="row g-3 mb-4 border p-3 rounded bg-light">

            <!-- البريد وحالة الطلب -->
            <div class="col-md-4">
                <label for="email" class="form-label">البريد الإلكتروني</label>
                <input type="text" id="email" name="email" class="form-control" placeholder="البريد الإلكتروني" />
            </div>

            <div class="col-md-3">
                <label for="status" class="form-label">الحالة</label>
                <select id="status" name="status" class="form-select">
                    <option value="All">كل الحالات</option>
                    <option value="Pending">قيد الانتظار</option>
                    <option value="Approved">تمت الموافقة</option>
                    <option value="Rejected">مرفوض</option>
                </select>
            </div>

            <!-- تواريخ الطلب -->
            <div class="col-12">
                <h6 class="fw-bold mt-3">تاريخ الطلب</h6>
            </div>

            <div class="col-md-3">
                <label for="requestDateFrom" class="form-label">من</label>
                <input type="date" id="requestDateFrom" name="requestDateFrom" class="form-control"
                      />
            </div>

            <div class="col-md-3">
                <label for="requestDateTo" class="form-label">إلى</label>
                <input type="date" id="requestDateTo" name="requestDateTo" class="form-control"
                    />
            </div>

            <!-- تواريخ الرحلة -->
            <div class="col-12">
                <h6 class="fw-bold mt-3">تاريخ الرحلة</h6>
            </div>

            <div class="col-md-3">
                <label for="flightDateFrom" class="form-label">من</label>
                <input type="date" id="flightDateFrom" name="flightDateFrom" class="form-control"
                       />
            </div>

            <div class="col-md-3">
                <label for="flightDateTo" class="form-label">إلى</label>
                <input type="date" id="flightDateTo" name="flightDateTo" class="form-control"
                        />
            </div>

            <!-- زر البحث -->
            <div class="col-md-3 align-self-end">
                <button type="submit" class="btn btn-primary w-100">بحث</button>
            </div>

        </form>
    </div>

    <!-- زر إضافة طلب -->
    <div class="mt-4 text-center">
        <a href="@Url.Action("Create")" class="btn btn-success px-4 py-2">
            <i class="fas fa-plus me-2"></i>إضافة طلب جديد
        </a>
    </div>



<!-- الكروت -->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var request in Model)
    {
        var statusClass = request.RequestStatus switch
        {
            "Approved" => "bg-success text-white",
            "Pending" => "bg-warning text-dark",
            "Rejected" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };

        var statusText = request.RequestStatus switch
        {
            "Approved" => "تمت الموافقة",
            "Pending" => "قيد الانتظار",
            "Rejected" => "مرفوض",
            _ => "غير معروف"
        };

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-header @statusClass">
                    <strong>الحالة:</strong> @statusText
                </div>
                <div class="card-body">
                    <p><strong>البريد الإلكتروني:</strong> @request.Email</p>
                    <p><strong>تاريخ الإرسال:</strong> @request.RequestTime.ToString("yyyy-MM-dd HH:mm")</p>
                    <p><strong>اسم الشركة:</strong> @request.CompanyName</p>
                    <p><strong>تاريخ-وقت الرحلة:</strong> @request.EntryTime.ToString("yyyy-MM-dd HH:mm")</p>
                </div>
                <div class="card-footer d-flex justify-content-between flex-wrap gap-2">
                    <a href="@Url.Action("Details", new { id = request.Id })" class="btn btn-info btn-sm">عرض</a>
                    <a href="@Url.Action("Edit", new { id = request.Id })" class="btn btn-warning btn-sm">تعديل</a>
                    <a href="@Url.Action("Delete", new { id = request.Id })" class="btn btn-danger btn-sm">حذف</a>
                    <a href="@Url.Action("ChangeStatus", new { id = request.Id })" class="btn btn-secondary btn-sm">تغيير الحالة</a>
                </div>
            </div>
        </div>
    }
</div>



@section Styles {
<script>
    



</script>
}