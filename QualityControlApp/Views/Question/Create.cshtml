@model Question 

@{
    ViewData["Title"] = ViewContext.RouteData.Values["controller"]?.ToString()
    + "-" + ViewContext.RouteData.Values["action"]?.ToString();
}

<div class="container">
    <h4>
        <b>@ViewContext.RouteData.Values["controller"]?.ToString()</b>
        - @ViewContext.RouteData.Values["action"]?.ToString()
    </h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">

                @if (ViewBag.Message != null)
                {
                    <h5 class="alert alert-danger">@ViewBag.Message</h5>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Content " class="control-label"></label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxGrid " class="control-label"></label>
                    <input asp-for="MaxGrid" class="form-control" />
                    <span asp-validation-for="MaxGrid" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuestionTypeId " class="control-label"></label>
                    <select asp-for="QuestionTypeId" class="form-control" asp-items="ViewBag.QuestionType">
                        <option value="" disabled selected>---------Select TypeName---------</option>
                    </select>
                    <span asp-validation-for="QuestionTypeId" class="text-danger"></span>
                </div>




                
                @* <input type="hidden" asp-for="Created" /> *@

                <div class="form-group mt-5">
                    <input type="submit" value="Create" class="btn btn-primary ps-5 pe-5 me-3" />
                    <a asp-action="Index" class="btn btn-outline-primary  ps-4 pe-4 me-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/inputfileimage.js"></script>
    <script src="~/js/stateswitch.js"></script>
}
