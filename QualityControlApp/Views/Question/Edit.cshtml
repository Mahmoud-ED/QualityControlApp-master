@model Question 

@{
    ViewData["Title"] = ViewContext.RouteData.Values["controller"]?.ToString()
    + "-" + ViewContext.RouteData.Values["action"]?.ToString();
}

<div class="container" style="min-height:71.5vh;">
    <div class="row">
        @if (ViewBag.Message != null)
        {
            <h5 class="alert alert-danger">@ViewBag.Message</h5>
        }
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                <div type="hidden" class="form-group">
                    <label  asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                
                
                
                
                
                
                <div class="form-group">
                    <label asp-for="Content " class="control-label"></label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MaxGrid  " class="control-label"></label>
                    <input asp-for="MaxGrid" class="form-control" />
                    <span asp-validation-for="MaxGrid" class="text-danger"></span>
                </div>




                <div class="form-group">
                          <label asp-for="QuestionTypeId " class="control-label"></label>
                          <select asp-for="QuestionTypeId" class="form-control" asp-items="ViewBag.QuestionType">
                       
                        <option value="" disabled selected>---------Select Type---------</option>
                       
                    </select>
                           <span asp-validation-for="QuestionTypeId" class="text-danger"></span>
                   
                </div>

                <div class="alert alert-info" role="alert" style="width:max-content">
                    <p>
                        <b>@Html.DisplayNameFor(model => model.Created):</b>
                        @Html.DisplayFor(model => model.Created)

                    </p>
                    <p>
                        <b>@Html.DisplayNameFor(model => model.Modified):</b>
                        @Html.DisplayFor(model => model.Modified)
                    </p>
                </div>


                <input type="hidden" asp-for="Created" />
                <input type="hidden" asp-for="Modified" value="@DateTime.Now" />

                <div class="form-group">
                   
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>



            </form>


        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

