@section Styles {
    <style>
        body {
            background-color: #f8f9fa; /* لون خلفية متناسق */
        }

        .display-5 {
            font-size: 2.5rem;
        }

        .lead {
            font-size: 1.1rem;
            font-weight: 300;
        }

        .form-label.fs-5 { /* لجعل عنوان حقل السؤال أكبر */
            font-size: 1.25rem !important;
        }

        .bg-opacity-75 {
            --bs-bg-opacity: .75;
        }

