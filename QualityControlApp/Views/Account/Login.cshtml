@model LoginVM
@{
    ViewBag.Title = "Login";

    // لا نضع layout مؤقتًا إذا أردنا خلفية تغطي الصفحة بالكامل بسهولة

    // Layout = null; // يمكنك تفعيل هذا إذا أردت صفحة بدون الـ Layout الأساسي
}

@* تضمين ملف CSS الخاص بصفحة الدخول *@
<link href="~/css/login.css" rel="stylesheet" />
@* تأكد من تضمين Font Awesome في _Layout.cshtml أو هنا مباشرة لو Layout = null *@
@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" /> *@

<div class="login-page-wrapper">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-lg-5 col-md-7 col-sm-9">
                <div class="card shadow-lg login-card border-0 overflow-hidden">

                    <div class="card-header login-header text-center border-0">
                       <img src="/img/LOGO.png" alt="Your Logo" class="login-logo mb-3" /> 
                        <h3 class="mb-0 login-title"><i class="fas fa-plane-departure me-2"></i>Welcome Back!</h3>
                    </div>

                    <div class="card-body login-body p-4 p-md-5">
                        <form asp-action="Login" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                            <div class="form-group mb-4 position-relative">
                                <label asp-for="Email" class="form-label visually-hidden"></label> 
                                <span class="input-icon"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control form-control-lg login-input" placeholder="Email Address" />
                                <span asp-validation-for="Email" class="text-danger invalid-feedback"></span> 
                            </div>

                            <div class="form-group mb-4 position-relative">
                                <label asp-for="Password" class="form-label visually-hidden"></label>
                                <span class="input-icon"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control form-control-lg login-input" placeholder="Password" /> 
                                <span asp-validation-for="Password" class="text-danger invalid-feedback"></span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check remember-me-label">
                                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMeCheck" />
                                    <label asp-for="RememberMe" class="form-check-label" for="rememberMeCheck">
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                                <a asp-action="ForgotPassword" class="forgot-password-link">Forgot password?</a>
                            </div>

                            <div class="d-grid mb-3">
                                @* استخدام d-grid لجعل الزر يملأ العرض بسهولة *@
                                <button type="submit" class="btn btn-primary btn-lg btn-login">
                                    <i class="fas fa-sign-in-alt me-2"></i> Login
                                </button>
                            </div>

                            <div class="text-center mt-4 registration-link">
                                Don't have an account? <a asp-action="Register" asp-controller="Account">Create one now</a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // إضافة بسيطة لتحسين عرض الأخطاء مع Bootstrap (اختياري)
        (function () {
            'use strict'
            // إضافة is-invalid class للحقول التي بها أخطاء عند تحميل الصفحة
             document.querySelectorAll('.input-validation-error').forEach(function (input) {
                 input.classList.add('is-invalid');
            });

             // يمكنك إضافة المزيد من التفاعلات هنا إذا أردت
        }());
    </script>
}