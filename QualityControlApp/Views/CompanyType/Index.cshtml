@model IEnumerable<QualityControlApp.Models.Entities.CompanyType>

@{
    ViewData["Title"] = "Company Types";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Company Type</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        No company types found. Click "Create New Company Type" to add one.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-info-circle"></i> Details
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

