@model IEnumerable<QuestionType>

@{
    ViewData["Title"] = ViewContext.RouteData.Values["controller"]?.ToString();
    // Layout = null;
}


<div style="min-height:80vh;">
    <h4>
        <b>@ViewContext.RouteData.Values["controller"]?.ToString()</b>
    </h4>
    <hr />

    @if (Model.Any())
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">جديد</a>
        </p>
        <span>QuestionType Count: </span>

        @ViewData["QuestionTypeCount"]
        ;

        @* @ViewBag.QuestionTypeCount; *@

        <table id="table1" class="table table-hover table-striped table-bordered">
            <thead class=" table-primary">
                <tr>
                    <th>
                        N
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeName)
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modified)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Questions .Count )
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modified)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">تعديل</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">تفاصيل</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                لاتوجد انواع
            </div>
            <div class="card-body">
                <a asp-controller="TypeQuestion" asp-action="Create" class="btn btn-primary">انشاء</a>
            </div>
        </div>
    }
</div>


