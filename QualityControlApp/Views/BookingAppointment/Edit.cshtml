@model QualityControlApp.ViewModels.BookingAppointmentVM

@{
    ViewData["Title"] = "Edit Appointment Booking";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Cairo', sans-serif;
    }

    .card-header-custom {
        background-color: #005A9C;
        color: white;
        font-weight: 600;
    }

    .form-label {
        font-weight: 600;
    }

    .btn-primary {
        background-color: #005A9C;
        border-color: #005A9C;
    }

        .btn-primary:hover {
            background-color: #004a80;
            border-color: #004a80;
        }

    .btn-icon i {
        margin-right: 0.5rem;
    }
</style>

<div class="container mt-4 mb-4">
    <div class="card shadow-sm">
        <div class="card-header card-header-custom">
            <i class="fas fa-edit me-2"></i> @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">

                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CompanyId" class="form-label"></label> <span class="text-danger">*</span>
                        <select asp-for="CompanyId" class="form-select" asp-items="Model.CompanySelectList">
                            <option value="">-- Please Select Company --</option>
                        </select>
                        <span asp-validation-for="CompanyId" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="BookingDate" class="form-label"></label> <span class="text-danger">*</span>
                        <input asp-for="BookingDate" type="date" class="form-control" />
                        <span asp-validation-for="BookingDate" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Notes" class="text-danger d-block mt-1"></span>
                    </div>
                </div>

                <hr class="my-4">

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-icon">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-icon">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Initialize a date picker library if needed
        });
    </script>
}
